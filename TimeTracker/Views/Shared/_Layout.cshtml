                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="../Home/Index" class="brand-link">
                <img src="../Content/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Time Tracker</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-header">MENU</li>
                        <li class="nav-item">
                            <a href="../Home/Tracker" id="Tracker" class="nav-link active">
                                <i class="far fa-clock nav-icon active"></i>
                                <p>Time Tracker</p>
                            </a>
                        </li>
                        <li class="nav-item" id="Roles" style="display: none;">
                            <a href="../Home/Roles" class="nav-link">
                                <i class="fas fa-user-tag nav-icon"></i>
                                <p>Roles</p>
                            </a>
                        </li>
                        <li class="nav-item" id="Modulos" style="display: none;">
                            <a href="../Home/Modulos" class="nav-link">
                                <i class="fas fa-layer-group nav-icon"></i>
                                <p>Modulos</p>
                            </a>
                        </li>
                        <li class="nav-item" id="Accesos" style="display: none;">
                            <a href="../Home/Accesos" class="nav-link">
                                <i class="fas fa-low-vision nav-icon"></i>
                                <p>Accesos</p>
                            </a>
                        </li>
                        <li class="nav-item" id="Usuarios" style="display: none;">
                            <a href="../Home/Usuarios" class="nav-link">
                                <i class="fas fa-users nav-icon"></i>
                                <p>Usuarios</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        @RenderBody()

        <footer class="main-footer">
            <strong>Copyright &copy; 2017-2020 <a href="http://hvl-report.web.app">Juan Carlos Aranda Alonso</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.2.0
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar ../Content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="../Content/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="../Content/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>$.widget.bridge('uibutton', $.ui.button)</script>
    <!-- Bootstrap 4 -->
    <script src="../Content/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS -->
    <script src="../Content/chart.js/Chart.min.js"></script>
    <!-- Sparkline -->
    <script src="../Content/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="../Content/jqvmap/jquery.vmap.min.js"></script>
    <script src="../Content/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="../Content/jquery-knob/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="../Content/moment/moment.min.js"></script>
    <script src="../Content/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="../Content/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="../Content/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="../Content/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- bs-custom-file-input -->
    <script src="../Content/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../Content/js/adminlte.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="../Content/js/pages/dashboard.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../Content/js/demo.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>

    <script>
        $(document).ready(function () {
            var menu = "@Session["menu"]";

            if (menu != "") {
                var listaMenu = menu.split(",");
                for (var menu of listaMenu) {
                    $("#" + menu).show();
                }
            } else {
                window.location = "../login/Logout";
            }
        })
    </script>

</body>
</html>


